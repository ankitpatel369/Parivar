@inject IViewLocalizer Localizer
@model Parivar.Dto.ViewModel.ContactUsModel
@{
    ViewData["Title"] = Localizer[LocalizationConstant.ContactUs];
}
<!--====== Page Banner Start ======-->

<section class="page-banner">
    <div class="page-banner-bg bg_cover" style="background-image: url(/theme/images/page-banner.jpg);">
        <div class="container">
            <div class="banner-content text-center">
                <h2 class="title">@Localizer[LocalizationConstant.ContactUs]</h2>
            </div>
        </div>
    </div>
</section>

<!--====== Page Banner Ends ======-->
<!--====== Contact Start ======-->

<section class="contact-area">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="single-contact-info mt-30">
                    <div class="info-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="info-content">
                        <h5 class="title">Address</h5>
                        <p>C502/ સત્યમ રેસિડેંસી, કિરણચોક, યોગીચોક, પુણાગામ, સુરત - 395010</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="single-contact-info mt-30">
                    <div class="info-icon">
                        <i class="fas fa-phone"></i>
                    </div>
                    <div class="info-content">
                        <h5 class="title">Phone</h5>
                        <p><a href="tel:+919824148792">+91 9824 148 792</a></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="single-contact-info mt-30">
                    <div class="info-icon">
                        <i class="far fa-globe"></i>
                    </div>
                    <div class="info-content">
                        <h5 class="title">Web</h5>
                        <p><a href="mailto://info@chodavadiyaparivar.com">info@chodavadiyaparivar.com</a></p>
                        <p><a href="#">www.chodavadiyaparivar.com</a></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="contact-form">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="contact-title text-center">
                        <h3 class="title">Leave a message here</h3>
                        <p>Here is our event schedule where you can get information about time schedule about this event so it's very easy for you to manage your time and schedule</p>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="contact-form-wrapper">
                        <!-- Contact Details -->
                        <form method="post" id="frmContactUs">
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="single-form">
                                        <input asp-for="FullName" type="text" placeholder="Your Name" required="required" />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="single-form">
                                        <input asp-for="Email" placeholder="Email Address" pattern="^[A-Za-z0-9](([_\.\-]?[a-zA-Z0-9]+)*)@@([A-Za-z0-9]+)(([\.\-]?[a-zA-Z0-9]+)*)\.([A-Za-z]{2,})$" required="required" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                @*<div class="col-md-6">
                                        <div class="single-form">
                                            <input type="text" name="phone" placeholder="Phone">
                                        </div>
                                    </div>*@
                                <div class="col-md-12">
                                    <div class="single-form">
                                        <input asp-for="Subject" type="text" id="subject" placeholder="Subject" required="required" />
                                        <span asp-validation-for="Subject" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="single-form">
                                        <textarea asp-for="Message" cols="40" rows="3" id="comments" placeholder="Write here..." spellcheck="true" required="required"></textarea>
                                        <span asp-validation-for="Message" class="text-danger"></span>
                                    </div>
                                </div>
                                <p class="form-message"></p>
                                <div class="col-md-12">
                                    <div class="single-form text-center">
                                        <button type="button" id="btnSubmitContact" class="main-btn mb-5">Submit now</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
